{
  "name": "@thebrenny/svelte-adapter-hono",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "version": "1.2.0",
  "scripts": {
    "package": "npm run build",
    "postinstall": "npm run format && npm run package --workspaces",
    "start": "node src/index.ts",
    "test": "vitest run",
    "dev": "rollup -cw",
    "build": "tsup && rollup -c",
    "format": "prettier --write .",
    "lint": "prettier --check ./src/**/*.ts && eslint ./src/**/*.ts",
    "check": "tsc --noEmit",
    "changeset": "npx @changesets/cli",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "adapter",
    "deploy",
    "hosting",
    "hono.js",
    "hono",
    "svelte",
    "sveltekit"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ROBOTofficial/svelte-hono-adapter.git"
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@changesets/cli": "^2.29.4",
    "@eslint/compat": "^1.2.9",
    "@eslint/js": "^9.26.0",
    "@hono/node-server": "^1.17.1",
    "@polka/url": "1.0.0-next.28",
    "@rollup/plugin-commonjs": "28.0.1",
    "@rollup/plugin-json": "6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@sveltejs/adapter-node": "^5.2.13",
    "@sveltejs/kit": "^2.25.2",
    "@types/node": "^24.1.0",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.1.0",
    "hono": "^4.8.5",
    "hono-absolute-serve-static": "^1.0.0",
    "polka": "1.0.0-next.28",
    "prettier": "^3.5.3",
    "rollup": "^4.45.1",
    "supertest": "^7.1.3",
    "tsup": "^8.5.0",
    "typescript-eslint": "^8.32.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.20.8"
  },
  "workspaces": [
    "./",
    "tests/app"
  ]
}
